                                                    {% if itemno == 2 %}{% set itemno = "" %}{% else %}{% set itemno = "2" %}{% endif %}
                                                    <dt class="listitem{{ itemno }}">{{ translate({ ident: "D3_CFG_MOD_LICDETAILS_VALIDFORSHOPID" }) }}</dt>
                                                    <dd class="listitem{{ itemno }}">
                                                        {{ oView.getFormatedShopIdList(oModule) }}
                                                    </dd>
