                                                    {% if itemno == 2 %}{% set itemno = "" %}{% else %}{% set itemno = "2" %}{% endif %}
                                                    <dt class="listitem{{ itemno }}">{{ translate({ ident: "D3_CFG_MOD_LICDETAILS_VALIDFORMODVERSION" }) }}</dt>
