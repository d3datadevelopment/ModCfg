                                                    <dt class="listitem{{ itemno }}">{{ translate({ ident: "D3_CFG_MOD_LICDETAILS_VALIDFORSHOPEDITION" }) }}</dt>
                                                    <dd class="listitem{{ itemno }}">
                                                        {{ oModule.getFormatedShopEditionList() }}
                                                    </dd>
                                                {% endif %}
